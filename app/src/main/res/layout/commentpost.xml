<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:layout_margin="8dp"
    android:layout_marginLeft="8dp"

    android:background="?android:attr/selectableItemBackgroundBorderless"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/r"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackgroundBorderless">

        <view
            android:id="@+id/view2"
            class="android.support.design.widget.AppBarLayout"


            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewquestion"
            android:background="#0a0b0a" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:layout_width="78dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/wwe"
            app:civ_border_color="#080808"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/textViewname"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/img"
            android:text="TextView"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textViewdate"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textViewname"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="90dp"
            android:fontFamily="sans-serif-condensed"
            android:text="TextView"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="12sp"
            android:typeface="sans" />

        <TextView
            android:autoLink="web"
            android:linksClickable="false"
            android:textColorLink="#e6128a"
            android:id="@+id/textViewcomment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="42dp"
            android:fontFamily="sans-serif"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <view
            android:id="@+id/view"
            class="android.support.design.widget.AppBarLayout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#e6128a" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img2"
            android:layout_width="72dp"
            android:layout_height="46dp"

            android:layout_alignStart="@+id/img4"
            android:layout_below="@+id/textViewcomment"
            android:src="@drawable/ic_unlike" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img4"
            android:layout_width="72dp"
            android:layout_height="46dp"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewcomment"
            android:layout_marginStart="131dp"
            android:src="@drawable/ic_like"
            android:visibility="invisible" />


        <view
            android:id="@+id/view4"
            class="android.support.design.widget.AppBarLayout"

            android:layout_width="294dp"
            android:layout_height="2dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/img"
            android:background="#0b0b0b" />

        <TextView
            android:id="@+id/textViewcommentid"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/view4"
            android:layout_alignParentTop="true"
            android:layout_marginTop="71dp"
            android:text="TextView"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewlikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewcomment"
            android:layout_marginLeft="230dp"

            android:text="TextView"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewreply"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="114dp"
            android:text="TextView"
            android:visibility="gone" />


    </RelativeLayout>


</android.support.v7.widget.CardView>