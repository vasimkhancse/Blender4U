<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewpost"
    android:background="#cccbcb">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#fff">

                <ImageView
                    android:id="@+id/imageViewmore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textViewname"
                    android:layout_marginStart="-53dp"
                    android:layout_toEndOf="@+id/textcommentss"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_more" />

                <TextView
                    android:id="@+id/textcommentss"
                    android:layout_width="70dp"
                    android:layout_height="34dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="53dp"
                    android:layout_marginTop="505dp"
                    android:text="yhgy"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:visibility="visible" />

                <TextView
                    android:layout_marginLeft="0dp"
                    android:id="@+id/textViewlikes2"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/textViewname"
                    android:layout_alignTop="@+id/textcommentss"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <android.support.v7.widget.Toolbar

                    android:id="@+id/t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"

                    android:background="@drawable/layoutcolor"
                    app:navigationIcon="@drawable/ic_back"
                    app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
                    app:titleTextColor="#000" />


                <view
                    android:id="@+id/view4"
                    class="android.support.design.widget.AppBarLayout"

                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/img"
                    android:background="#0b0b0b" />


                <view
                    android:id="@+id/view2"
                    class="android.support.design.widget.AppBarLayout"


                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="250dp"
                    android:background="#0a0b0a" />

                <view
                    android:id="@+id/view6"
                    class="android.support.design.widget.AppBarLayout"


                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/ree"
                    android:background="#0a0b0a" />

                <view
                    android:id="@+id/view7"
                    class="android.support.design.widget.AppBarLayout"


                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/r"
                    android:background="#0a0b0a" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img"
                    android:layout_width="86dp"
                    android:layout_height="77dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="78dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/blender"
                    app:civ_border_color="#080808"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/textViewname"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="99dp"
                    android:layout_marginTop="93dp"
                    android:text="TextView"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/textViewdate"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/textViewname"
                    android:layout_marginEnd="81dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="TextView"
                    android:textColor="@android:color/holo_blue_bright"
                    android:textSize="12sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/textViewtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/r"
                    android:layout_below="@+id/view4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="-3dp"
                    android:layout_marginTop="-1dp"
                    android:fontFamily="sans-serif"
                    android:text="TextView"
                    android:textColor="@android:color/holo_purple"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:autoLink="web"
                    android:textColorLink="#e6128a"
               android:linksClickable="false"

                    android:typeface="serif" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img3"
                    android:layout_width="72dp"
                    android:layout_height="46dp"

                    android:layout_alignBottom="@+id/textcommentss"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="132dp"
                    android:src="@drawable/ic_comment" />

                <view
                    android:id="@+id/view"
                    class="android.support.design.widget.AppBarLayout"

                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="#e6128a" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img2"
                    android:layout_width="72dp"
                    android:layout_height="50dp"

                    android:layout_alignBottom="@+id/textcommentss"
                    android:layout_alignEnd="@+id/img"
                    android:src="@drawable/ic_unlike" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img4"
                    android:layout_width="76dp"
                    android:layout_height="47dp"

                    android:layout_alignBottom="@+id/textcommentss"
                    android:layout_alignEnd="@+id/img"
                    android:src="@drawable/ic_like"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/textViewpostid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/textViewdate"
                    android:layout_marginTop="244dp"
                    android:text="TextView"
                    android:visibility="invisible" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/re"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ree"
                   />

                <ImageView
                    android:id="@+id/ree"
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"


                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/textcommentss"
                    app:srcCompat="@drawable/ic_filter2" />


                <RelativeLayout
                    android:id="@+id/r"
                    android:layout_width="match_parent"
                    android:layout_height="233dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/view2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewquestion"
                        android:autoLink="web"
                        android:linksClickable="false"
                        android:textColorLink="#e6128a"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="serif"
                        android:text="TextView"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:typeface="serif"
                        android:visibility="invisible" />

                    <com.example.khanbros.blender4umodel.squareimageview
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/blender" />

                    <com.example.khanbros.blender4umodel.squarevideoview
                        android:id="@+id/videoView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"

                        android:layout_marginTop="1dp" />

                    <com.google.android.youtube.player.YouTubeThumbnailView
                        android:id="@+id/y"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/imageViewyb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/yb" />

                    <ProgressBar
                        android:id="@+id/progressBar3"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerInParent="true"
                        android:progressTint="@color/colorAccent" />

                    <ImageView
                        android:id="@+id/imageViewplay"
                        android:layout_width="95dp"
                        android:layout_height="68dp"
                        android:layout_centerInParent="true"

                        android:visibility="invisible"
                        app:srcCompat="@drawable/ic_play" />
                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/editTextcmt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#000"
        android:backgroundTint="#8f2525"
        android:ems="10"

        android:hint="write comment"
        android:inputType="textMultiLine"
         android:focusable="false"
        android:textColor="#fffefe"
        android:textColorHint="#fff" />


</RelativeLayout>